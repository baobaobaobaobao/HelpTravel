});	
//获取用户信息，并显示姓名
function   GetAndShow(){
	//取出sessionStorage中登录用户数据，然后使用它
	var arr = sessionStorage.getItem('users');
	var array = JSON.parse(arr);
	//alert(array.name);
	//将取出来的数据放在用户名位置
	$("#name").text(array.name);
}
