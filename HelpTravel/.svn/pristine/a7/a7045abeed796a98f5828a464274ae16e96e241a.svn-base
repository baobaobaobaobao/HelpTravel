<!DOCTYPE html>
<html>
	<head>
		<meta charset="utf-8" />
		<title></title>
		    <link rel="stylesheet" type="text/css"href="/HelpTravel/resourses/easyui/themes/default/easyui.css">
	      <link rel="stylesheet" type="text/css" href="/HelpTravel/resourses/easyui/themes/icon.css">
	      <script type="text/javascript" src="/HelpTravel/resourses/easyui/jquery.min.js"></script>
	      <script type="text/javascript" src="/HelpTravel/resourses/easyui/jquery.easyui.min.js"></script>
	      <script type="text/javascript" src="/HelpTravel/resourses/easyui/locale/easyui-lang-zh_CN.js"></script>
	     <script type="text/javascript" src="/HelpTravel/resourses/bootstrap-3.3.7-dist/js/bootstrap.min.js"></script>
	     
	     <script  type="text/javascript" src="/HelpTravel/manage/js/ManageCommon.js" ></script>
    </head>
	<body>
	    <!-- 数据表格 -->
		<table id="allReport"  class="easyui-datagrid" style="width:100%;height:589px"
				url="/HelpTravel/Report/AllReportJourney" 
				toolbar="#toolbar"
				rownumbers="true" fitColumns="true" singleSelect="true">
			<thead>
				<tr>
				    <th  field="ruid"    width="0px">投诉ID</th>
				    <th field="motif"  width="80px">被举报交游</th>
					<th field="name"  width="80px">举报人</th>
					
					<th field="reason" width="80px">投诉内容</th>
				   
					<!-- <th   data-options="field:'_operate',width:80,align:'center',formatter:formatOper">操作</th>  --> 
				</tr>
			</thead>
		</table>
		<!-- 工具框 -->
	    <div id="toolbar">	
			<a href="#" class="easyui-linkbutton" iconCls="icon-locked" plain="true" onclick="stop()">删除该投诉</a>
			<!--  <a href="#" class="easyui-linkbutton" iconCls="icon-remove" plain="true" onclick="begin()">解封该评论</a>-->
		</div>
	 <!-- 模态框显示举报信息 -->	
	 <div id="pro" class="easyui-dialog" style="width:50%;height:50%;padding-left:10px;" closed="true" >
		<table>
		  <th>昵称</th><th>举报信息</th>
		  <tbody id="tbody"></tbody>
		</table>						
	 </div>	  		
</body>
<script type="text/javascript" src="/HelpTravel/manage/js/manage.js"></script>
<script type="text/javascript" src="/HelpTravel/manage/js/manageAllReport.js"></script>
